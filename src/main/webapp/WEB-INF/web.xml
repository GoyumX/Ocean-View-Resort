<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>Ocean View Resort</display-name>

  <description>
    Ocean View Resort in Galle Sri Lanka
  </description>

  <!-- Welcome File List -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Servlet Definitions -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.oceanview.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.oceanview.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DashboardServlet</servlet-name>
    <servlet-class>com.oceanview.servlet.DashboardServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ReservationServlet</servlet-name>
    <servlet-class>com.oceanview.servlet.ReservationServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>HelpServlet</servlet-name>
    <servlet-class>com.oceanview.servlet.HelpServlet</servlet-class>
  </servlet>

  <!-- Servlet Mappings -->
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Session Configuration -->
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>


</web-app>